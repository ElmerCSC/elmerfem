Header
  CHECK KEYWORDS Warn
  Mesh DB "." "OnePipe"
  Include Path ""
  Results Directory ""
End

Simulation
  Max Output Level = 5
  Coordinate System = Cartesian
  Coordinate Mapping(3) = 1 2 3
  Simulation Type = Steady state
  Steady State Max Iterations = 1
  Output Intervals = 1
  Timestepping Method = BDF
  BDF Order = 1
  Post File = case3d.vtu

  Extruded Mesh Levels = Integer 20
  Extruded Max Coordinate = 0.0
  Extruded Min Coordinate = -5.0
End 


Constants
  Gravity(4) = 0 -1 0 9.82
  Stefan Boltzmann = 5.67e-08
  Permittivity of Vacuum = 8.8542e-12
  Boltzmann Constant = 1.3807e-23
  Unit Charge = 1.602e-19
End

Body 1
  Target Bodies(1) = 1
  Name = "Ground"
  Equation = 1
  Material = 1
End

Body 2
  Target Bodies(1) = 2
  Name = "Grout"
  Equation = 1
  Material = 1
End

Body 3
  Target Bodies(1) = 3
  Name = "Pipe"
  Equation = 1
  Material = 1
End

Body 4
  Name = "Pipe boundary"
  Equation = 1
  Material = 2
End

Solver 1
  Equation = Heat Equation
  Procedure = "HeatSolve" "HeatSolver"
  Variable = Temperature
  Exec Solver = Always
  Stabilize = True
  Bubbles = False
  Lumped Mass Matrix = False
  Optimize Bandwidth = True
  Steady State Convergence Tolerance = 1.0e-5
  Nonlinear System Convergence Tolerance = 1.0e-7
  Nonlinear System Max Iterations = 1
  Nonlinear System Newton After Iterations = 3
  Nonlinear System Newton After Tolerance = 1.0e-3
  Nonlinear System Relaxation Factor = 1
  Linear System Solver = Iterative
  Linear System Iterative Method = BiCGStab
  Linear System Max Iterations = 500
  Linear System Convergence Tolerance = 1.0e-10
  BiCGstabl polynomial degree = 2
  Linear System Preconditioning = ILU1
  Linear System ILUT Tolerance = 1.0e-3
  Linear System Abort Not Converged = False
  Linear System Residual Output = 20
  Linear System Precondition Recompute = 1
End

Equation 1
  Name = "HeatEquation"
  Active Solvers(1) = 1
  Convection = "constant"
End

Material 1
  Name = "Ideal Rock"
  Heat Conductivity = 2.5
  Density = 2700.0
End

Material 2
  Name = "Effective Pipe"

$r1 = 0.05
  Heat Transfer Multiplier = Real $ r1/2

  Heat Conductivity = 10.0
  Density = 1000.0
  Convection Velocity 3 = -0.001
  Heat Capacity = 4.19e3
End

Boundary Condition 1
  Target Boundaries(4) = 9 10 11 12 
  Name = "Exterior"

  Infinity BC Temperature = Logical True
  Infinity BC Temperature Offset = Real 10.0
End

Boundary Condition 2
  Target Boundaries(4) = 5 6 7 8 
  Name = "Grout BC"
End

Boundary Condition 3
  Target Boundaries(4) = 1 2 3 4 
  Name = "Pipe BC"

  Temperature = Equals "Coordinate 3"
  Temperature Condition = Variable "Coordinate 3"
    Real MATC "1.0e-3+tx" 

  Body Id = 4
End


Solver 1 :: Reference Norm = 5.0959308