!# Solve just one Laplace equation now the level is detemined by a integral over
!# the boundary \int T dS = const. Note that even though there is just one equation currently its 
!# not possible to determine the vector internally.

Header
  CHECK KEYWORDS Warn
  Mesh DB "." "angle"
  Include Path ""
  Results Directory ""
End

Simulation
!  Max Output Level = 4
  Coordinate System = "Cartesian"
  Coordinate Mapping(3) = 1 2 3

  Simulation Type = "Steady State"
  Steady State Max Iterations = 1
  Output Intervals = 1

!  Post File = "case.ep"
End

Constants
  Gravity(4) = 0 -1 0 9.82
  Stefan Boltzmann = 5.67e-08
End

Body 1
  Name = "Body1"
  Body Force = 1
  Equation = 1
  Material = 1
End

Body 2
  Name = "Body2"
  Body Force = 1
  Equation = 1
  Material = 1
End

Equation 1
  Name = "Equation1"
  Active Variables(1) = Integer 1 
End


Solver 1
  Coupled Solver = Logical True

  Steady State Convergence Tolerance = 1.0e-05
  Nonlinear System Relaxation Factor = Real 1.0
  Nonlinear System Max Iterations = Integer 3

  Linear System Solver = "Iterative"
  Linear System Iterative Method = bicgstab
  Linear System Convergence Tolerance = 1.0e-8
  Linear System Max Iterations = 500
  Linear System Preconditioning = ILU0

  Equation = "test"
  Variable 1 = String T1

  Bulk Assembly Procedure 11 = File "./PoissonAssembly" "BulkAssembly"

  Boundary Assembly Procedure 11 = File "./PoissonAssembly" "BoundaryAssembly"

  Constraint 1 = String "consa"
  Constraint 1 Value = Real 0.0
  Constraint 1 Type = String "integral"
  Constraint 1 Variables = Integer 1
End  

Solver 2
  Exec Solver = never

  Procedure = "SaveData" "SaveScalars"
  Filename = f.dat
  Variable 1 = T1
  Operator 1 = min
End 

Material 1
  Name = "Material1"

  Density = real 1
  Conductivity = Real 1.0
  Reaction = Real 0.0
  Source = Real 1.0
End

Boundary Condition 1
  Target Boundaries(1) = 1 2
  Test Flux = Real -1.0
  consa = Logical True
End

Solver 1 :: Reference Norm = Real 0.75632190
$fprintf( stderr, "TEST CASE 1\n")$
RUN
$fprintf( stderr,"END TEST CASE 1: Target NRM=0.75632190\n");


