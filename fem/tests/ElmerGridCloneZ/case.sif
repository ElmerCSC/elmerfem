! Test case for case where 2D mesh is copied to three copies in z-direction.
! Can be used for 2.5 dimensional simulation.
!
! 2.11.2015 / P.R. 

Check Keywords "Warn"
Header
  Mesh DB "." "angles"
End

Simulation
  Max Output Level = 4
  Coordinate System = "Cartesian"
  Simulation Type = Steady
  Output Intervals = 1
  Steady State Max Iterations = 1
  Post File = case.vtu
End

Body 1
  Equation = 1
  Body Force = 1
  Material = 1
End

Equation 1
  Name = "Heat"
  Active Solvers(1) = 1
End

Body Force 1
  Heat Source = Variable "Coordinate 3" 
    Real MATC "1.0+tx"
End


Material 1
  Name = "Ideal"
  Heat Conductivity = 1.0
  Density = 1.0
End 


Solver 1
  Equation = HeatSolver
  Variable = Temperature
  Procedure = "HeatSolve" "HeatSolver"

  Steady State Convergence Tolerance = 1.0e-5

  Nonlinear System Convergence Tolerance = 1.0e-4
  Nonlinear System Max Iterations = 1
  Nonlinear System Newton After Iterations = 3
  Nonlinear System Newton After Tolerance = 1.0e-5
  Nonlinear System Relaxation Factor = 1

  Linear System Solver = Iterative
  Linear System Iterative Method = BiCGStab
  Linear System Max Iterations = 1000
  Linear System Convergence Tolerance = 1.0e-8
  Linear System Preconditioning = ILU0
  Linear System Abort Not Converged = False
  Linear System Residual Output = 10
  Linear System Precondition Recompute = 1

  Nonlinear System Consistent Norm = True
End 


Boundary Condition 1
  Name = "Inside"
  Target Boundaries(1) = 3
  Temperature = 0.0
End

Boundary Condition 2
  Name = "Outside"
  Target Boundaries(2) = 1 4
  Temperature = 0.0
End


Solver 1 :: Reference Norm = 1.457492E-01
