! In addition for simple natural convection here restart is applied.

$ relax = 0.7

Header
  CHECK KEYWORDS Warn
  Mesh DB "." "square"
  Include Path ""
  Results Directory ""
End

Simulation
  Max Output Level = 5
  Coordinate System = Cartesian
  Coordinate Mapping(3) = 1 2 3
  Simulation Type = Transient
  Steady State Min Iterations = 1
  Steady State Max Iterations = 30
  Timestepping Method = bdf
  Bdf Order = 1
  Timestep intervals(1) = 10
  Timestep Sizes(1) = 1.0
  Output Intervals(1) = 1 

  Post File = case.vtu
!  Output File = case.result
!  Binary Output = Logical True

!  Restart File = ../init_asc.result
  Restart File = ../init_bin.result
!  Restart File = ../old.result
  Restart Position = 0

! These are for testing selective restart
  Restart Variable 1 = String Temperature
  Restart Variable 2 = String Velocity      ! takes components 1 & 2
  Restart Variable 3 = String globaltest 1  ! takes component of the global vector
End

Constants
  Gravity(4) = 0 -1 0 9.82
  Stefan Boltzmann = 5.67e-08
  Permittivity of Vacuum = 8.8542e-12
  Boltzmann Constant = 1.3807e-23
  Unit Charge = 1.602e-19
End

Body 1
  Target Bodies(1) = 1
  Name = "Fluid"
  Equation = 1
  Material = 1
  Body Force = 1
  Initial condition = 1
End

Solver 1
  Equation = Energy
  Procedure = "HeatSolve" "HeatSolver"
  Variable = -dofs 1 Temperature
  Stabilize = True
  Bubbles = False
  Optimize Bandwidth = True
  Steady State Convergence Tolerance = 1.0e-3

  Nonlinear System Convergence Tolerance = 1.0e-4
  Nonlinear System Max Iterations = 1
  Nonlinear System Newton After Iterations = 3
  Nonlinear System Newton After Tolerance = 1.0e-3
  Nonlinear System Relaxation Factor = $ relax

  Linear System Symmetric = True
  Linear System Solver = Iterative
  Linear System Iterative Method = GCR
  Linear System Max Iterations = 500
  Linear System Convergence Tolerance = 1.0e-8
  Linear System Preconditioning = ILU0
  Linear System Abort Not Converged = False
  Linear System Residual Output = 10
End

Solver 2
  Equation = Flow
  Procedure = "FlowSolve" "FlowSolver"
  Variable = Flow Solution[Velocity:2 Pressure:1]
  Stabilize = True
  Bubbles = False
  Optimize Bandwidth = True
  Steady State Convergence Tolerance = 1.0e-3

  Nonlinear System Convergence Tolerance = 1.0e-4
  Nonlinear System Max Iterations = 1
  Nonlinear System Newton After Iterations = 3
  Nonlinear System Newton After Tolerance = 1.0e-3
  Nonlinear System Relaxation Factor = $ relax

  Linear System Symmetric = True
  Linear System Solver = Iterative
  Linear System Iterative Method = Bicgstabl
  Linear System Max Iterations = 500
  Linear System Convergence Tolerance = 1.0e-10
  Linear System Preconditioning = ILU0
  Linear System Abort Not Converged = False
  Linear System Residual Output = 10
End



Equation 1
  Name = "Natural Convection"
  Convection = Computed
  Active Solvers(2) = 1 2
End

Material 1
  Name = "Water (room temperature)"
  Heat Conductivity = 0.58
  Reference Temperature = 293.0
  Heat Capacity = 4183.0
  Density = 998.3
  Viscosity = 1.002e-3
  Sound speed = 1497.0
  Heat expansion Coefficient = 0.207e-3
End

Body Force 1
  Name = "Bouancy"
  Boussinesq = True
End

Initial Condition 1
  Name = "Initial Guess"
  Velocity 2 = 0.0
  Velocity 1 = 1.0e-9
  Temperature = 295
!Variable Coordinate 1
!    Real MATC "293+400*tx"
End

Boundary Condition 1
  Target Boundaries(1) = 1
  Name = "Bottom"
  Velocity 1 = 0.0
  Velocity 2 = 0.0
End

Boundary Condition 2
  Target Boundaries(1) = 2
  Name = "Right"
  Velocity 1 = 0.0
  Velocity 2 = 0.0
  Temperature = 297.0
End

Boundary Condition 3
  Target Boundaries(1) = 3
  Name = "Top"
!  Velocity 1 = 0.0
  Velocity 2 = 0.0
End

Boundary Condition 4
  Target Boundaries(1) = 4
  Name = "Left"
  Velocity 1 = 0.0
  Velocity 2 = 0.0
  Temperature = 293.0
End

Solver 2 :: Reference Norm = Real 3.23629024598017228E-004
Solver 2 :: Reference Norm Tolerance = Real 1.0e-4
RUN
