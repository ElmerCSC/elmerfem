
!!---------------------------------------------------------!!
!	Predictor-Corrector Time Scheme Test  
!	Solve Stokes equation with freesurface
!	Use freesurface solutions as predictor-corrector
!!---------------------------------------------------------!!

$Step = "slab_predictor_corrector"


! Time stepping
$dt = 50
$numberofsteps = 5
$adapTol = 1.0e-2

! Spacial domain
$L = 1.0e4
$Slope = 0.0

! Physical Parameters
$yearinsec = 365.25*24*60*60
$rhoi = 910.0/(1.0e6*yearinsec^2)   
$gravity = -9.81*yearinsec^2
$n = 3.0
$eta = (2.0*100.0)^(-1.0/n)

! Initial Thickness
$Hm = 100.0 


! Accumulation rate
$function topAcc(x){ \
  Rel = 2.0e3; \
  acBase = 1.0e-3; \
  L = 1.0e4; \
  tempCenter = x-L/2.0; \
  temp = acBase*(Rel-abs(tempCenter)); \
  if (temp < 0.0) _topAcc = 0.0;\
  else { \
    if (temp > 0.5) _topAcc = 0.5;\
    else _topAcc = temp;\
  } \
} 


! ----------------------------------------------
Header
  Mesh DB "." "rectangle"
End

Constants
! No constant Needed
End

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
Simulation
  Coordinate System  = Cartesian 2D 
  Simulation Type = Transient     

  Output Intervals =  5
  Timestep Intervals =  $numberofsteps
  Timestep Sizes = $dt
  Predictor-Corrector Control = Logical True

  Steady State Min Iterations = 1
  Steady State Max Iterations = 1

  Post File = "$Step$_dt$dt$_.vtu"

  max output level = 3
  Test Output = Logical False
End

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! The ice
Body 1
  Equation = 1
  Body Force = 1
  Material = 1
  Initial Condition = 1
End

! The Free Surface
Body 2
  Equation = 2
  Body Force = 2
  Material = 1
  Initial Condition = 1
End

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
Initial Condition 1
  Velocity 1 = Real 0.0
  Velocity 2 = Real 0.0
  Pressure = Real 0.0

  Zs = Real 100.0
  Zb = Real 0.0
End

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
Body Force 1
  Flow BodyForce 1 = Real 0.0                          
  Flow BodyForce 2 = Real $gravity 
End

Body Force 2
  Zs Accumulation = Variable Coordinate 1
     REAL MATC "topAcc(tx)"
End



!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
Material 1
  Density = Real $rhoi 
  Viscosity Model = String "power law"
  Viscosity = Real $eta                       
  Viscosity Exponent = Real $1.0/n                
  Critical Shear Rate = Real 1.0e-10
  Isothermal = Logical True  
End

 
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
Solver 1
  Exec Solver = "Predictor-Corrector"
  Equation = "Free Surface Top"
  Procedure =  "FreeSurfaceSolver" "FreeSurfaceSolver"
  Variable = "Zs"
  Variable DOFs =  1
  Exported Variable 1 = "Zs Residual"
  Exported Variable 1 DOFs = 1
  Exported Variable 2 = "Zb"

  Before Linsolve = "EliminateDirichlet" "EliminateDirichlet"

  Linear System Solver = Iterative
  Linear System Max Iterations = 1500
  Linear System Iterative Method = BiCGStab
  Linear System Preconditioning = ILU0
  Linear System Convergence Tolerance = Real 1.0e-12
  Linear System Abort Not Converged = False
  Linear System Residual Output = 1500

  Predictor method = String "Adams-Bashforth"
  Corrector method = String "Adams-Moulton"
  Skip First Timestep = Logical True
  Predictor-Corrector Scheme Order = Integer 1
  Predictor-Corrector Control Tolerance = Real $adapTol

  Stabilization Method = stabilized
  Apply Dirichlet = Logical False
End

Solver 2
  Equation = "MapCoordinate"
  Procedure = "StructuredMeshMapper" "StructuredMeshMapper"
  Active Coordinate = Integer 2
  Top Surface Variable Name = String "Zs"
  Bottom Surface Variable Name = String "Zb"

  Mesh Velocity First Zero = Logical True
  Displacement Mode = Logical False 
End

Solver 3
  Equation = Navier-Stokes
  Variable = Flow Solution[Velocity:2 Pressure:1]

  Stabilization Method = String Stabilized

  Linear System Solver = Direct
  Linear System Direct Method = umfpack

  Steady State Convergence Tolerance = 1.0e-4
  Nonlinear System Convergence Tolerance = 1.0e-4
  Nonlinear System Max Iterations = 40
  Nonlinear System Newton After Iterations = 41
  Nonlinear System Newton After Tolerance = 1.0e-200
  Nonlinear System Relaxation Factor = 1
  Nonlinear System Reset Newton = Logical True

  Flow Model = String "Stokes"
End


!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
Equation 1
  Name = "Equation1"
   Active Solvers(2) = 2 3
End

Equation 2
  Name = "Equation2"
  Active Solvers(1) =  1 
  Flow Solution Name = String "Flow Solution"
  Convection = String Computed
End


!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! BC Bedrock
Boundary Condition 1
  Target Boundaries = 1

  Velocity 1 = Real 0.0
  Velocity 2 = Real 0.0
End


! BC outflow right
Boundary Condition 2
  Target Boundaries = 2
  Periodic BC = 4 
  Periodic BC Velocity 1  = Logical True
  Periodic BC Velocity 2  = Logical True
  Periodic BC Pressure  = Logical True
End

! BC Free Surface Top
Boundary Condition 3
  Target Boundaries = 3
  Body Id = 2
End

! BC inflow left
Boundary Condition 4
  Target Boundaries = 4
End

Solver 1 :: Reference Norm = Real 126.92692
Solver 1 :: Reference Norm Tolerance = Real 1E-03 

RUN

