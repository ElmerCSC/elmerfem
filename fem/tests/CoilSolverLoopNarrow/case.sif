! This version of coil solver uses a narrow version of the interface
! conditions for the closed coil. 

Check Keywords "Warn"

Header
  Mesh DB "." "Loop"
End

Simulation
  Max Output Level = 7
  Coordinate System = Cartesian
  Simulation Type = Steady
  Output Intervals(1) = 1
  Steady State Max Iterations = 1

! Filename Numbering = Logical True
  Post File = "f.vtu"

! Increase mesh density
  Mesh Levels = 2
End

Body 1
  Target Bodies = 2 
  Equation = 1
  Material = 1
End

Body 2
  Target Bodies(2) = 1 3
  Equation = 2
End

Equation 1 
  Name = "CoilSolver"
  Active Solvers(3) = 1 2 3
End 

Equation 2
  Name = "NoEquations"
End 



Solver 1
  Equation = "CoilSolver"

  Procedure = "CoilSolver" "CoilSolver"

!  Linear System Solver = direct 

  Linear System Solver = "Iterative"
  Linear System Preconditioning = ilu2
  Linear System Max Iterations = 1000
  Linear System Convergence Tolerance = 1e-10
  Linear System Iterative Method = BiCGStabL
  Linear System Residual Output = 20
!  Steady State Convergence Tolerance = 1e-06

! It is not sensible to perform too many iterations because the 
! iterative system actually does not most often have a solution
! Trying to find it will result to numerical problems. 
! Only 2 or 3 iterations could be optimal. 
! 1 iteration uses constant conductivity. 

!  Desired Coil Current = Real 1.0
  Desired Current Density = Real 1.0

! In principle this could work to ensure smoothness of
! the conductivity field but in practice it does not. 
!  Cfix Diffusion = Real 1.0e-4

  Optimize Bandwidth = False

! The fitting can be either isotropic or unisotropic.
! In the unisotropic model the conductivity is aligned like the 
! previous gradient of the solution.
!  Coil Unisotropic = Logical True

!  Normalize Coil Current = Logical True

  Nonlinear System Consistent Norm = Logical True

  Coil Closed = Logical True

! This could be useful sometimes
  Narrow Interface = Logical True

  Save Coil Set = Logical True
  Save Loads = Logical True
  Calculate Coil Current = Logical True
End



! Compute divergence field: it should be close zero
Solver 2
  Equation = Divergence Solver
  Procedure = "DivergenceSolver" "DivergenceSolver"

  Linear System Solver = Iterative
  Linear System Iterative Method = BiCGStab
  Linear System Preconditioning = none
  Linear System Max Iterations = 1000
  Linear System Convergence Tolerance = 1.0e-10
  Linear System Residual Output = 0
  Steady State Convergence Tolerance = 1.0e-4

  Divergence Variable = String "CoilCurrent"

  Nonlinear System Consistent Norm = True
End


Material 1
  Density = 1.0
End


Solver 1 :: Reference Norm = 8.65342720
Solver 2 :: Reference Norm = 1.20856155E-01
