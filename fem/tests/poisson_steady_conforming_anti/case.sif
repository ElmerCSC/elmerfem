! Test case for Poisson equation + conforming BCs.
!
! This uses elimination via a Perm vector.
!
! This has antiperiodic BCs that require PeriodicFlip to be determined. 
!
! P.R. 13.5.2019

Check Keywords "Warn"

Header
  Mesh DB "." "hexwire"
End

Simulation
  Max Output Level = 7
  Coordinate System = "Cartesian"
  Simulation Type = Steady
  Steady State Max Iterations = 1
  Output Intervals(1) = 1

  Post File = case_anti.vtu
End

Body 1
  Name = "Rest"
  Equation = 1
  Material = 1
End

Body 2
  Name = "Heat"
  Equation = 1
  Material = 1
  Body Force = 1
End

Material 1
  Name = "Ideal"
  Heat Conductivity = 1.0
  Density = 1.0
End


Equation 1
  Active Solvers(1) = 1 
End


Solver 1
  Equation = "HeatEq"

  Variable = "Temperature"
  Procedure = "HeatSolve" "HeatSolver"

  Linear System Solver = "Iterative"
  Linear System Preconditioning = none
  Linear System Residual Output = 10
  Linear System Max Iterations = 1000
  Linear System Iterative Method = BiCgStabl 
  Linear System Convergence Tolerance = 1.0e-10
  BicgStabl Polynomial Degree = 4

  Apply Conforming BCs = Logical True
End


Body Force 1
  Name = "Heating"
  Heat Source = 1.0
End


Boundary Condition 1
  Name = "AirStart"
  Target Boundaries(1) = 5
End


Boundary Condition 2
  Name = "WireStart"
  Target Boundaries(1) = 6 
End


Boundary Condition 3
  Name = "AirEnd"
  Target Boundaries(1) = 7
End


Boundary Condition 4
  Name = "WireEnd"
  Target Boundaries(1) = 8
End


Boundary Condition 5
  Name = "MaxX"
  Target Boundaries(1) = 2

  Conforming BC = Integer 6
  Anti Plane Projector = Logical True
End

Boundary Condition 6
  Name = "MinX"
  Target Boundaries(1) = 1
End
 
Boundary Condition 7
  Name = "MaxY"
  Target Boundaries(1) = 4
  Temperature = 0
End
 
Boundary Condition 8
  Name = "MinY"
  Target Boundaries(1) = 3
End

Solver 1 :: Reference Norm = 7.46177796E-01


